<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="35dp"
        android:textSize="15sp"
        android:text="Task Name"
        android:id="@+id/task_title_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/task_title_view"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="10sp"
        android:id="@+id/task_list_name_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_list_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2sp"
            android:layout_marginTop="2sp"
            android:text="List name"
            android:textAlignment="center"
            android:id="@+id/task_list_name_view"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/task_list_name_layout"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="10sp"
        android:id="@+id/task_date_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_icon_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2sp"
            android:layout_marginTop="2sp"
            android:text="dd-mm-rrrr"
            android:textAlignment="center"
            android:id="@+id/task_date_view"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/task_date_layout"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="10sp"
        android:id="@+id/task_description_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/description_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2sp"
            android:layout_marginTop="2sp"
            android:text="Desctription"
            android:textSize="12sp"
            android:id="@+id/task_description_view"/>
    </LinearLayout>

</RelativeLayout>