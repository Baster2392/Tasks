<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="12:00"
        android:id="@+id/tasklisk_list_clock_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:layout_marginHorizontal="25sp"
        android:paddingTop="5sp"
        android:text="@string/task_lists"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:layout_marginBottom="5sp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="2"
            android:textColor="@color/task_default"
            android:textSize="11sp"
            android:textAlignment="center"
            android:text="@string/add_tasklist"
            android:id="@+id/go_to_add_tasklists_activity_button"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="2"
            android:textColor="@color/task_default"
            android:textSize="11sp"
            android:textAlignment="center"
            android:text="@string/refresh"
            android:id="@+id/refresh_tasklists_button"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</LinearLayout>